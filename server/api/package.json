{
    "name": "@7egend/notification-hub-api",
    "version": "1.0.0",
    "description": "An express server that exposes a REST API to send notifications based on posted events.",
    "main": "dist/index.js",
    "scripts": {
        "prettier:base": "prettier --parser typescript --single-quote",
        "prettier:check": "pnpm run prettier:base -- --list-different \"src/**/*.{ts,tsx,json}\"",
        "prettier:write": "pnpm run prettier:base -- --write \"src/**/*.{ts,tsx,json}\"",
        "build": "tsc",
        "clean": "rm -rf ./dist",
        "start": "node -r dotenv/config ./dist/index.js dotenv_config_path=.app.env",
        "start:dev": "pnpm run build && pnpm run start",
        "test": "jest --coverage",
        "test:watch": "yarn test --watchAll"
    },
    "author": "7EGEND",
    "repository": {
        "url": "git@gitlab.com:7egend/projects/home/microservices/notification-hub/server/api.git"
    },
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@7egend/notification-hub-models": "workspace:*",
        "amqp-connection-manager": "^4.1.10",
        "amqplib": "^0.10.3",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "fp-ts": "^2.13.1",
        "http-status-codes": "^2.2.0",
        "morgan": "^1.10.0",
        "winston": "^3.8.2",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.15",
        "@types/jest": "^29.5.1",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.16.1",
        "jest": "^29.5.0",
        "prettier": "^2.8.1",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
