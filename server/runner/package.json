{
    "name": "notification-hub-server",
    "version": "1.0.0",
    "description": "Sends notifications to Slack and Azure DevOps",
    "main": "dist/index.js",
    "scripts": {
        "prettier:base": "prettier --parser typescript --single-quote",
        "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx,json}\"",
        "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx,json}\"",
        "build": "tsc",
        "clean": "rm -rf ./dist",
        "start": "node -r dotenv/config ./dist/index.js dotenv_config_path=.app.env",
        "start:dev": "npm run build && npm run start",
        "test": "jest --coverage",
        "test:watch": "yarn test --watchAll"
    },
    "author": "7EGEND",
    "repository": {
        "url": "git@gitlab.com:7egend/projects/home/microservices/notification-hub/server/runner.git"
    },
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@7egend/notification-hub-models": "^0.2.4",
        "@slack/web-api": "^6.8.0",
        "amqp-connection-manager": "^4.1.9",
        "amqplib": "^0.10.3",
        "azure-devops-node-api": "^11.2.0",
        "date-fns-timezone": "^0.1.4",
        "dotenv": "^16.0.3",
        "fp-ts": "^2.13.1",
        "winston": "^3.8.2",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@types/amqplib": "^0.10.0",
        "@types/jest": "^29.2.0",
        "jest": "^29.2.2",
        "prettier": "^2.8.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}
